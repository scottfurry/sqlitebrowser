{
    "tools": [
        {
            "name": {"name_text": "astyle", "name_exec": "astyle"},
            "arg_version": { "arg": "version", "oper": "LE", "value": "3.1"},
            "arg_conf": { "arg": "options", "value": "astylerc"}
        },
        {
            "name": {"name_text": "astyle_recursive", "copy": "astyle"},
            "arg_extra": {"recursive": ""}
        },
        {
            "name": {"name_text": "xmllint", "name_exec": "xmllint", "force_equal": false},
            "arg_version": { "arg": "version"},
            "arg_file": {"arg_input": "", "arg_output": "output"},
            "env": { "XMLLINT_INDENT": "    "},
            "arg_extra": {"format": ""}
        },
        {
            "name": { "name_text": "cmake-format", "name_exec": "cmake-format", "force_equal": false},
            "arg_version": { "arg": "version"},
            "arg_conf": { "arg": "config-files", "value": "cmake-format.json"},
            "arg_file": {"arg_input": "", "arg_output": "outfile-path"}
        }
    ],
    "paths": {
        "astyle": [
            "src/*.cpp",
            "src/*.h",
            "src/extensions/*.c",
            "src/tests/*.cpp",
            "src/tests/*.h"
        ],
        "astyle_recursive": [
            "src/sql/*.cpp",
            "src/sql/*.h"
        ],
        "xmllint": [
            "distri/sqlitebrowser.desktop.appdata.xml",
            "distri/mime/packages/db4s-sqbpro.xml"
        ],
        "cmake-format": [
            "CMakeLists.txt",
            "libs/qhexedit/CMakeLists.txt",
            "libs/qscintilla/Qt4Qt5/CMakeLists.txt",
            "libs/json/CMakeLists.txt",
            "libs/qcustomplot-source/CMakeLists.txt",
            "src/tests/CMakeLists.txt"
        ]

    }
}
